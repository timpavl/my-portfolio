.skills__subtitle {
	width: 100%;
}
.skills-list {
	margin-top: 40px;
	display: grid;
	grid-template-columns: 134px 134px 134px 134px;
	grid-template-rows: 134px;
	grid-gap: 10%;
	grid-template-areas: "a b c d";
	&__item:nth-child(1){
		grid-area: a;
	}
	&__item:nth-child(2){
		grid-area: b;
	}
	&__item:nth-child(3){
		grid-area: c;
	}
	&__item:nth-child(4){
		grid-area: d;
	}
}
.skills-list__item {
	position: relative;
	color: $grey;
	font-size: 18px;
	font-weight: 700;
	border-radius: 50%;
	width: 134px;
	height: 134px;
	display: flex;
	justify-content: center;
	align-items: center;
	text-align: center;
}
.percent {
	position: absolute;
	width: 136px;
	height: 136px;
	transform: rotate(180deg)
}
