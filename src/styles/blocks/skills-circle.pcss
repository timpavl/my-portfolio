.skills-list__svg {
	position: absolute;
	top: 0;
	left: 0;
	width: 136px;
	height: 136px;
	transform: rotate(180deg);
}
.skills-list__circle-under {
	fill: transparent;
	stroke-width: 3px;
	stroke: $grey;
}
.skills-list__circle-upper {
	fill: transparent;
	stroke-width: 6px;
	stroke-dasharray: 351;
	stroke-dashoffset: 351;
	transition: stroke-dashoffset 1s;
}

@keyframes fill {
from {
	stroke-dashoffset: 351;
}

to {
	stroke-dashoffset: 0;
}
}
@media only screen and (max-width: 1045px) {
	.skills__grid {
		width: 100%;
		display: flex;
		flex-direction: column;
		align-items: center;
	}
}
@media only screen and (max-width: 820px) {
	.skills-list {
		grid-template-columns: 134px 134px;
		grid-template-rows: 134px 134px;
		grid-template-areas: "a b" "c d";
	}
	.skills__title {
		text-align: center;
	}
}